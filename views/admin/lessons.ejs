<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (lessons.length > 0) { %>
                    <div class="grid">
                        <% for (let lesson of lessons) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= lesson.date %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h2 class="product__price">
                                        <%= lesson.maxSlots %> posti
                                    </h2>
                                    <p class="product__description">
                                        <%= lesson.type %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-lesson/<%= lesson._id %>?edit=1" class="btn">Modifica</a>
                                    <form action="/admin/delete-lesson" method="POST">
                                        <button class="btn" type="submit">Elimina</button>
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="lessonId" value="<%= lesson._id %>">
                                    </form>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>Nessuna pratica trovata!</h1>
                    <% } %>
            </main>
            <%- include('../includes/end.ejs') %>